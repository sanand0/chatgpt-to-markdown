{
  "name": "chatgpt-to-markdown",
  "version": "1.12.0",
  "description": "Convert ChatGPT exported conversations.json to Markdown",
  "homepage": "https://github.com/sanand0/chatgpt-to-markdown",
  "repository": { "type": "git", "url": "https://github.com/sanand0/chatgpt-to-markdown.git" },
  "license": "MIT",
  "author": "Anand S <root.node@gmail.com>",
  "type": "module",
  "module": "chatgpt-to-markdown.js",
  "files": [
    "LICENSE",
    "README.md",
    "chatgpt-to-markdown.js",
    "claude-to-markdown.js",
    "thinktime.js",
    "chatgpt-to-markdown-cli.js",
    "claude-to-markdown-cli.js",
    "thinktime-cli.js"
  ],
  "exports": {
    ".": "./chatgpt-to-markdown.js",
    "./chatgpt": "./chatgpt-to-markdown.js",
    "./claude": "./claude-to-markdown.js"
  },
  "bin": {
    "chatgpt-to-markdown": "chatgpt-to-markdown-cli.js",
    "claude-to-markdown": "claude-to-markdown-cli.js",
    "thinktime": "thinktime-cli.js"
  },
  "scripts": {
    "lint": "dprint fmt -c https://raw.githubusercontent.com/sanand0/scripts/refs/heads/main/dprint.jsonc && npx -y oxlint --fix",
    "test": "npx -y vitest@3 run --globals",
    "prepublishOnly": "npm run lint && npm test"
  },
  "dependencies": { "stream-json": "^1.9.1" },
  "keywords": ["chatgpt", "claude", "markdown", "converter"]
}
